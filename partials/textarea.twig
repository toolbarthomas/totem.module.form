{% embed 'totem_submodules::totem.module.form/partials/form-group.twig' %}

    {% block field %}

        <textarea
            {% for attribute, value in input_attributes %}
                {% if not attribute is same as('value') %}

                    {% if value is same as(true) %}
                        {{ ' ' ~ attribute }}
                    {% elseif value is not empty %}
                        {{ attribute }}="{{ value }}"
                    {% endif %}

                {% endif %}
            {% endfor %}
        >
            {{- input_attributes.value is not empty ? input_attributes.value -}}
        </textarea>
    {% endblock %}

{% endembed %}