{% embed 'totem_submodules::totem.module.form/partials/form-group.twig' with {
    horizontal_layout: null
} %}

    {% if label is defined %}
        {% block label %}
            <label>{{ label }}</label>
        {% endblock %}
    {% endif %}

    {% if radios is not empty %}
        {% block field %}

            {% for radio in radios %}

                {% include 'totem_submodules::totem.module.form/partials/radio.twig' with radio %}

            {% endfor %}

        {% endblock %}
    {% endif %}

{% endembed %}