{% embed 'totem_submodules::totem.module.form/partials/form-group.twig' %}

    {% if label is defined %}
        {% block label %}
            <label>{{ label }}</label>
        {% endblock %}
    {% endif %}

    {% if radios is not empty %}
        {% block field %}

            {% for radio in radios %}

                {# Disable horizontal layout for nested radio #}
                {% set radio = radio|merge({horizontal_layout : false }) %}

                {% include 'totem_submodules::totem.module.form/partials/radio.twig' with radio %}

            {% endfor %}

        {% endblock %}
    {% endif %}

{% endembed %}