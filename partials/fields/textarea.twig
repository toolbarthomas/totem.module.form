{% embed 'totem_submodules::totem.module.form/partials/objects/form-group.twig' %}

    {% if label is defined %}
        {% block label %}
            <label {{ input_attributes.id is not empty ? 'for="#' ~ input_attributes.id ~ '"' }}>{{ label }}</label>
        {% endblock %}
    {% endif %}

    {% block field %}
        <textarea
            {% for attribute, value in input_attributes %}
                {% if not attribute is same as('value') %}

                    {% if value is same as(true) %}
                        {{ ' ' ~ attribute }}
                    {% elseif value is not empty %}
                        {{ attribute }}="{{ value }}"
                    {% endif %}

                {% endif %}
            {% endfor %}
        >
            {{- input_attributes.value is not empty ? input_attributes.value -}}
        </textarea>
    {% endblock %}


    {% if validation is iterable %}
        {% block validation %}
            {% include 'totem_submodules::totem.module.form/partials/objects/form-message.twig' with validation %}
        {% endblock %}
    {% endif %}

{% endembed %}