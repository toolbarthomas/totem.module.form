<div class="form-group {{ validation.class is not empty ? validation.class }}">
    {% if horizontal_layout is not empty %}
        <div class="row {{ horizontal_layout.row_class is not empty ? horizontal_layout.row_class }}">

            {% if block('label') is defined %}
            <div class="{{ horizontal_layout.label_class is not empty ? horizontal_layout.label_class : 'scol12 pcol12 tcol5 col4' }}">
                {{ block('label' )}}
            </div>
            {% endif %}

            <div class="{{ horizontal_layout.field_class is not empty ? horizontal_layout.field_class : 'scol12 pcol12 tcol7 col8' }}">
                {{ block('field' )}}
            </div>

        </div>
    {% else %}
        {{ block('label' ) }}
        {{ block('field' ) }}
    {% endif %}

    {{ block('description' )}}
</div>